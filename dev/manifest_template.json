{
  "manifest_version": 3,
  "name": "Backlog Sprinter",
  "key": "",
  "version": "1.2.17",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["identity", "storage", "tabs"],
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.backlog.com/board/*", "https://*.backlog.jp/board/*", "https://*.backlogtool.com/board/*"],
      "css": ["css/bsp.css"],
      "js": ["board.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.backlog.com/*", "https://*.backlog.jp/*", "https://*.backlogtool.com/*"],
      "css": ["css/bsp.css"],
      "js": ["project.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://backlog-sprinter.vercel.app/api/*"],
      "js": ["storeToken.js"],
      "run_at": "document_end"
    }
  ]
}
