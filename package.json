{
  "name": "backlog-sprinter",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "build": "rm -rf build; mkdir -p build/code; NODE_ENV=production DST_DIR=$PWD/build/code webpack; cd build/code; zip ../backlog-sprinter.zip -r *",
    "once": "webpack",
    "watch": "webpack --watch",
    "wsl": "DST_DIR=$(echo $PATH | grep -o '/mnt/c/Users/[a-zA-Z]*' | head -n 1)/dev/bnn/backlog-sprinter/dist yarn watch",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "env": {
      "webextensions": true,
      "browser": true
    },
    "plugins": [
      "react",
      "react-hooks",
      "@typescript-eslint"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useRecoilCallback|useRecoilTransaction_UNSTABLE)"
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "webpack.config.js",
      "node_modules"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "immer": "^9.0.18",
    "jotai": "^2.0.0",
    "jotai-immer": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.5",
    "react-tooltip": "^5.7.1",
    "recharts": "^2.4.3",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/chrome": "^0.0.200",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "babel-loader": "^8.3.0",
    "copy-webpack-plugin": "^10.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^4.0.1",
    "husky": "^8.0.2",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.4.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^4.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json}": [
      "yarn lint:fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 120
  },
  "yarn": {
    "node": "18.16.0",
    "yarn": "4.0.0-rc.42"
  }
}
