{
  "name": "backlog-sprinter2",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && NODE_ENV=production vite build ; cd dist ; zip ../backlog-sprinter.zip -r *",
    "test": "vitest",
    "ladle": "ladle serve"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "backlog-js": "^0.13.0",
    "immer": "^10.0.2",
    "jotai": "^2.1.1",
    "jotai-immer": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-tooltip": "^5.13.1",
    "recharts": "^2.6.2",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@ladle/react": "^2.14.0",
    "@testing-library/react": "^14.0.0",
    "@types/chrome": "^0.0.237",
    "@types/eslint": "^8",
    "@types/prettier": "^2",
    "@types/react": "^18.2.9",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitejs/plugin-react": "^1.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.15",
    "vite-plugin-svgr": "^3.2.0",
    "vitest": "^0.32.0"
  },
  "volta": {
    "node": "18.16.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 120
  },
  "eslintConfig": {
    "env": {
      "webextensions": true,
      "browser": true
    },
    "plugins": [
      "react",
      "react-hooks",
      "@typescript-eslint"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useRecoilCallback|useRecoilTransaction_UNSTABLE)"
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "webpack.config.js",
      "node_modules"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
